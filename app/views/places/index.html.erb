<% provide(:title, 'All places') %>

<h1>All places</h1>
<div class="row" align="center">
    <%= render "search" %>
</div>
<div class="row" align="center">
	<%= render "view_mode" %>
</div>
<% if @view_mode != "map" %>
	<%= render :partial => "tile_list" %>
<% else %>
	<%= render :partial => "map_list", locals: { json: @json, places: @places } %>
<% end %>