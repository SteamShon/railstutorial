$(function() {
  $(".modal-body").html("<%= escape_javascript(render :partial => "places/place", :locals => {:place => @place }) %>");
  $(".modal-title").html("<%= escape_javascript(link_to @place.name, reviews_path(:place => @place)) %>")
  $(".modal-form").html("<%= escape_javascript(render :partial => "form", 
  	:locals => { :place_id => @place.id, :review => Review.new }) %>");
  $("#modal-gallery").modal();
})