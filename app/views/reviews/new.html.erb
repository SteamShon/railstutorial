<% provide(:title, "Posting diary") %>
<h1>Post Diary</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for @review, :html => { :multipart => true } do |f| %>
      <%= f.hidden_field :user_id, :value => @current_user.id %>
      <%= f.hidden_field :place_id, :value => @place_id %>

      <%= f.label :title %>
      <%= f.text_field :title %>
      
      <%= f.label :note %>
      <%= f.text_area :note %>

      <%= f.label :rate %>
      <%= f.text_field :rate %>
      
      <%= f.file_field :photo %>

      <%= f.submit "Posting", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

